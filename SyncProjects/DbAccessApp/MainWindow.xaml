<Window x:Class="DbAccessApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DB Access" Height="520" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="120"/>
        </Grid.RowDefinitions>
        <StackPanel Margin="8">
            <WrapPanel Margin="0,0,0,8">
                <Button Name="BtnStartDbOps" Click="BtnStartDbOps_Click" Width="220" Margin="4">Start 8 simulated DB tasks</Button>
                <Button Name="BtnSimReadConfig" Click="BtnSimReadConfig_Click" Width="180" Margin="4">Read config</Button>
                <Button Name="BtnSimWriteConfig" Click="BtnSimWriteConfig_Click" Width="180" Margin="4">Write config</Button>
            </WrapPanel>
            <TextBlock Text="Semaphore 4 concurrent DB connections, ReaderWriterLockSlim for config" Margin="4"/>
        </StackPanel>
        <GroupBox Header="Logs" Grid.Row="2" Margin="0,10,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="120"/>
                </Grid.ColumnDefinitions>
                <ListBox Name="LogList" Grid.Column="0" Margin="6" />
                <StackPanel Grid.Column="1" Margin="6" VerticalAlignment="Top">
                    <Button Name="BtnClearLogs" Click="BtnClearLogs_Click" Margin="0,0,0,8">Clear logs</Button>
                    <TextBlock Text="Status:" FontWeight="Bold"/>
                    <TextBlock Name="TxtStatus" Text="Ready" TextWrapping="Wrap" Margin="0,4,0,0"/>
                </StackPanel>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
